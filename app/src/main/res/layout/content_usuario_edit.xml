<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="libelulati.tripctrl.Usuario.UsuarioEditActivity"
    tools:showIn="@layout/activity_usuario_edit">

    <Button
        android:id="@+id/bt_use_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_use_alterarsenha"
        android:layout_alignEnd="@+id/bt_use_alterarsenha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bt_use_alterarsenha"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:text="@string/salvar"
        android:textColor="@color/colorBranco"
        android:textSize="@dimen/fontebotoes" />

    <Button
        android:id="@+id/bt_use_alterarsenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ed_use_telefone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ed_use_telefone"
        android:background="@color/colorAccent"
        android:text="@string/alterarsenha"
        android:textColor="@color/colorBranco"
        android:textSize="@dimen/fontebotoes" />

    <TextView
        android:id="@+id/tx_use_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/nome" />

    <EditText
        android:id="@+id/ed_use_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt_use_salvar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bt_use_salvar"
        android:layout_below="@+id/tx_use_nome"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/nome"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tx_use_dtnasc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ed_use_nome"
        android:layout_marginTop="35dp"
        android:text="@string/dtnasc" />

    <EditText
        android:id="@+id/ed_use_dtnasc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ed_use_nome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ed_use_nome"
        android:layout_below="@+id/tx_use_dtnasc"
        android:ems="10"
        android:inputType="date"
        android:onClick="showDatePickerDialog"
        android:text="@string/dtnasc"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tx_use_codarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ed_use_dtnasc"
        android:layout_marginTop="35dp"
        android:text="@string/codarea" />

    <EditText
        android:id="@+id/ed_use_codarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tx_use_codarea"
        android:maxLength="6"
        android:text="@string/codarea"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tx_use_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tx_use_codarea"
        android:layout_centerHorizontal="true"
        android:text="@string/telefone" />

    <EditText
        android:id="@+id/ed_use_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tx_use_telefone"
        android:layout_alignStart="@+id/tx_use_telefone"
        android:layout_below="@+id/tx_use_telefone"
        android:ems="10"
        android:inputType="phone"
        android:text="@string/telefone"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tx_use_localizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tx_use_dtnasc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tx_use_dtnasc"
        android:layout_below="@+id/ed_use_codarea"
        android:layout_marginTop="35dp"
        android:text="@string/localizacao" />

    <EditText
        android:id="@+id/ed_use_localizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bt_use_salvar"
        android:layout_below="@+id/tx_use_localizacao"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="@string/localizacao"
        android:textColor="@color/colorAccent" />

</RelativeLayout>
