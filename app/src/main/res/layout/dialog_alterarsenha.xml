<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ed_ns_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tx_ns_informe"
        android:ems="10"
        android:hint="@string/senha"
        android:inputType="textPassword"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/ed_ns_confirmesenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ed_ns_senha"
        android:layout_alignLeft="@+id/ed_ns_senha"
        android:layout_alignRight="@+id/ed_ns_senha"
        android:layout_alignStart="@+id/ed_ns_senha"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/confirmesenha"
        android:inputType="textPassword"
        android:textColor="@color/colorAccent" />
</LinearLayout>