<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="libelulati.tripctrl.Senha.NovaSenhaActivity"
    tools:showIn="@layout/activity_nova_senha">

    <TextView
        android:id="@+id/tx_ns_informe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="@string/informenovasenha"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/fontesecundaria" />



    <Button
        android:id="@+id/bt_ns_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ed_ns_confirmesenha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ed_ns_confirmesenha"
        android:layout_below="@+id/ed_ns_confirmesenha"
        android:layout_marginTop="94dp"
        android:background="@color/colorPrimary"
        android:text="@string/salvar"
        android:textColor="@color/colorBranco"
        android:textSize="@dimen/fontebotoes" />
</RelativeLayout>
