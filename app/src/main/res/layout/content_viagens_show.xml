<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="libelulati.tripctrl.Viagens.ViagensShowActivity"
    tools:showIn="@layout/activity_viagens_show">

    <ScrollView
        android:id="@+id/sv_vis_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome"
                android:id="@+id/tx_vis_nome" />

            <EditText
                android:id="@+id/ed_vis_nome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tx_vis_nome"
                android:hint="@string/nome"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent"
                android:enabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/localizacao"
                android:id="@+id/tx_vis_localizacao"
                android:layout_alignEnd="@+id/ed_vis_nome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vis_nome"
                android:layout_below="@+id/ed_vis_nome"/>

            <EditText
                android:id="@+id/ed_vis_localizacao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tx_vis_localizacao"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_vis_localizacao"
                android:layout_below="@+id/tx_vis_localizacao"
                android:hint="@string/localizacao"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent"
                android:enabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dtinicio"
                android:id="@+id/tx_vis_dtini"
                android:layout_alignEnd="@+id/ed_vis_localizacao"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vis_localizacao"
                android:layout_below="@+id/ed_vis_localizacao"/>

            <EditText
                android:id="@+id/ed_vis_inicio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tx_vis_dtini"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_vis_dtini"
                android:layout_below="@+id/tx_vis_dtini"
                android:hint="@string/dtinicio"
                android:inputType="date"
                android:textColor="@color/colorAccent"
                android:onClick="showDatePickerDialog_vis_dtini"
                android:enabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dtfim"
                android:id="@+id/tx_vis_dtfim"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ed_vis_inicio"/>

            <EditText
                android:id="@+id/ed_vis_fim"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tx_vis_dtfim"
                android:hint="@string/dtfim"
                android:inputType="date"
                android:textColor="@color/colorAccent"
                android:onClick="showDatePickerDialog_vis_dtfim"
                android:enabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipotransporte"
                android:id="@+id/tx_vis_tptransporte"
                android:layout_alignEnd="@+id/ed_vis_fim"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vis_fim"
                android:layout_below="@+id/ed_vis_fim"/>

            <EditText
                android:id="@+id/ed_vis_tipotransporte"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tx_vis_tptransporte"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_vis_tptransporte"
                android:layout_below="@+id/tx_vis_tptransporte"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent"
                android:enabled="false"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_vis_tptransporte"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_vis_tptransporte"
                android:layout_below="@+id/tx_vis_tptransporte"
                android:layout_marginTop="6dp"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transporte"
                android:id="@+id/tx_vis_transporte"
                android:layout_alignEnd="@+id/ed_vis_tipotransporte"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vis_tipotransporte"
                android:layout_below="@+id/ed_vis_tipotransporte"/>

            <EditText
                android:id="@+id/ed_vis_transporte"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tx_vis_transporte"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_vis_transporte"
                android:layout_below="@+id/tx_vis_transporte"
                android:hint="@string/transporte"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent"
                android:enabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipohospedagem"
                android:id="@+id/tx_vis_tphospedagem"
                android:layout_alignEnd="@+id/ed_vis_transporte"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vis_transporte"
                android:layout_below="@+id/ed_vis_transporte"/>

            <EditText
                android:id="@+id/ed_vis_tipohospedagem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tx_vis_tphospedagem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_vis_tphospedagem"
                android:layout_below="@+id/tx_vis_tphospedagem"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent"
                android:enabled="false"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_vis_tphospedagem"
                android:layout_alignEnd="@+id/tx_vis_tphospedagem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_vis_tphospedagem"
                android:layout_below="@+id/tx_vis_tphospedagem"
                android:layout_marginTop="6dp"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hospedagem"
                android:id="@+id/tx_vis_hospedagem"
                android:layout_alignEnd="@+id/ed_vis_tipohospedagem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vis_tipohospedagem"
                android:layout_below="@+id/ed_vis_tipohospedagem"/>

            <EditText
                android:id="@+id/ed_vis_hospedagem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ed_vis_tipohospedagem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_vis_hospedagem"
                android:layout_below="@+id/tx_vis_hospedagem"
                android:hint="@string/hospedagem"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent"
                android:enabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/valortotal"
                android:id="@+id/tx_vis_valortotal"
                android:layout_alignEnd="@+id/ed_vis_hospedagem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vis_hospedagem"
                android:layout_below="@+id/ed_vis_hospedagem"/>

            <EditText
                android:id="@+id/ed_vis_valortotal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tx_vis_valortotal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_vis_valortotal"
                android:layout_below="@+id/tx_vis_valortotal"
                android:hint="@string/valortotal"
                android:inputType="numberDecimal"
                android:textColor="@color/colorAccent"
                android:enabled="false"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
