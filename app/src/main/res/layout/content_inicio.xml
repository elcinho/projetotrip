<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_inicio" tools:context="libelulati.tripctrl.Inicio.InicioActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adicioneviagem"
        android:id="@+id/bt_ini_addviagem"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/fonte_botoes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" "
        android:id="@+id/tx_ini_dataviagem"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" "
        android:id="@+id/tx_ini_valorviagem"
        android:layout_below="@+id/tx_ini_dataviagem"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_ini_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_new"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bt_ini_addviagem"
        android:layout_alignEnd="@+id/bt_ini_addviagem"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_ini_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bt_ini_addviagem"
        android:layout_alignEnd="@+id/bt_ini_addviagem"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_attach_money"
        android:id="@+id/fab_ini_gastos"
        android:layout_above="@+id/fab_ini_add"
        android:layout_alignLeft="@+id/fab_ini_add"
        android:layout_alignStart="@+id/fab_ini_add"
        android:layout_marginBottom="107dp"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_ini_planejamento"
        android:src="@drawable/ic_assignment"
        android:layout_above="@+id/fab_ini_pagamento"
        android:layout_toRightOf="@+id/fab_ini_pagamento"
        android:layout_toEndOf="@+id/fab_ini_pagamento"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_ini_pagamento"
        android:src="@drawable/ic_payment"
        android:layout_above="@+id/fab_ini_configuracoes"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_ini_configuracoes"
        android:src="@drawable/ic_settings"
        android:layout_alignTop="@+id/fab_ini_add"
        android:layout_alignLeft="@+id/fab_ini_pagamento"
        android:layout_alignStart="@+id/fab_ini_pagamento"
        android:visibility="invisible"/>

</RelativeLayout>
