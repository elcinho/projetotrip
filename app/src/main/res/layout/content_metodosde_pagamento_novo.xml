<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_metodosdepagamento_novo_activity"
    tools:context="libelulati.tripctrl.MetodosPagamento.MetodosPagamentoNovoActivity">

    <ScrollView
        android:id="@+id/sv_mpn_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detalhe"
                android:id="@+id/tx_mpn_detalhe" />

            <EditText
                android:id="@+id/ed_mpn_detalhe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tx_mpn_detalhe"
                android:hint="@string/detalhe"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/viagem"
                android:id="@+id/tx_mpn_viagem"
                android:layout_marginTop="15dp"
                android:layout_alignEnd="@+id/ed_mpn_detalhe"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_mpn_detalhe"
                android:layout_below="@+id/ed_mpn_detalhe"/>

            <EditText
                android:id="@+id/ed_mpn_viagem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tx_mpn_viagem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_mpn_viagem"
                android:layout_below="@+id/tx_mpn_viagem"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorBranco"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_mpn_viagem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_mpn_viagem"
                android:layout_below="@+id/tx_mpn_viagem"
                android:layout_marginTop="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo_pagamento"
                android:id="@+id/tx_mpn_tipopagamento"
                android:layout_marginTop="15dp"
                android:layout_alignEnd="@+id/ed_mpn_viagem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_mpn_viagem"
                android:layout_below="@+id/ed_mpn_viagem"/>

            <EditText
                android:id="@+id/ed_mpn_tipopagamento"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tx_mpn_tipopagamento"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_mpn_tipopagamento"
                android:layout_below="@+id/tx_mpn_tipopagamento"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorBranco"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_mpn_tipopagamento"
                android:layout_alignEnd="@+id/tx_mpn_tipopagamento"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_mpn_tipopagamento"
                android:layout_below="@+id/tx_mpn_tipopagamento"
                android:layout_marginTop="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dt_venc"
                android:id="@+id/tx_mpn_dtvenc"
                android:layout_marginTop="15dp"
                android:layout_alignEnd="@+id/ed_mpn_tipopagamento"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_mpn_tipopagamento"
                android:layout_below="@+id/ed_mpn_tipopagamento"/>

            <EditText
                android:id="@+id/ed_mpn_dtvenc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ed_mpn_tipopagamento"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_mpn_dtvenc"
                android:layout_below="@+id/tx_mpn_dtvenc"
                android:hint="@string/dt_venc"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent"
                android:onClick="showDatePickerDialog_mpn_dtvenc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/valortotal"
                android:id="@+id/tx_mpn_valortotal"
                android:layout_marginTop="15dp"
                android:layout_alignEnd="@+id/ed_mpn_dtvenc"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_mpn_dtvenc"
                android:layout_below="@+id/ed_mpn_dtvenc"/>

            <EditText
                android:id="@+id/ed_mpn_valortotal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tx_mpn_valortotal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tx_mpn_valortotal"
                android:layout_below="@+id/tx_mpn_valortotal"
                android:hint="@string/valortotal"
                android:inputType="numberDecimal"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
