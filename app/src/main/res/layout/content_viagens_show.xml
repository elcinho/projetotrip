<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="libelulati.tripctrl.Viagens.ViagensShowActivity"
    tools:showIn="@layout/activity_viagens_show">

    <ScrollView
        android:id="@+id/vis_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/vis_linearvertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx_vis_nometitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/nome" />

            <EditText
                android:id="@+id/ed_vis_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tx_vis_nometitulo"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/nome"
                android:inputType="textCapWords|textAutoComplete"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tx_vis_localizacaotitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ed_vis_nome"
                android:text="@string/localizacao" />

            <EditText
                android:id="@+id/ed_vis_localizacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ed_vis_nome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vis_nome"
                android:layout_below="@+id/tx_vis_localizacaotitulo"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/localizacao"
                android:inputType="textCapWords|textAutoComplete"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tx_vis_dtiniciotitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ed_vis_localizacao"
                android:text="@string/dtinicio" />

            <EditText
                android:id="@+id/ed_vis_dtinicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tx_vis_dtiniciotitulo"
                android:layout_toLeftOf="@+id/ed_vis_dtfim"
                android:layout_toStartOf="@+id/ed_vis_dtfim"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/dtinicio"
                android:inputType="date"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tx_vis_dtfimtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ed_vis_dtinicio"
                android:layout_centerHorizontal="true"
                android:text="@string/dtfim" />

            <EditText
                android:id="@+id/ed_vis_dtfim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tx_vis_dtfimtitulo"
                android:layout_alignStart="@+id/tx_vis_dtfimtitulo"
                android:layout_alignTop="@+id/ed_vis_dtinicio"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/dtfim"
                android:inputType="date"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tx_vis_tipotranportetitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ed_vis_dtfim"
                android:text="@string/tipotransporte" />

            <EditText
                android:id="@+id/ed_vis_tipotransporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ed_vis_dtfim"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vis_dtfim"
                android:layout_below="@+id/tx_vis_tipotranportetitulo"
                android:enabled="false"
                android:hint="@string/tipotransporte"
                android:inputType="textCapWords|textAutoComplete"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tx_vis_transportetitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ed_vis_tipotransporte"
                android:text="@string/transporte" />

            <EditText
                android:id="@+id/ed_vis_transporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ed_vis_tipotransporte"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vis_tipotransporte"
                android:layout_below="@+id/tx_vis_transportetitulo"
                android:enabled="false"
                android:hint="@string/transporte"
                android:inputType="textCapWords|textAutoComplete"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tx_vis_tipohospedagemtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ed_vis_transporte"
                android:text="@string/tipohospedagem" />

            <EditText
                android:id="@+id/ed_vis_tipohospedagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tx_vis_tipohospedagemtitulo"
                android:enabled="false"
                android:hint="@string/tipohospedagem"
                android:inputType="textAutoComplete"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tx_vis_hospedagemtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hospedagem" />

            <EditText
                android:id="@+id/ed_vis_hospedagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="@string/hospedagem"
                android:inputType="textCapWords|textAutoComplete"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tx_vis_valortotaltitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/valortotal" />

            <EditText
                android:id="@+id/ed_vis_valortotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/valortotal"
                android:inputType="numberDecimal"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/bt_vis_btvazio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ed_vis_valortotal"
                android:text="@string/salvar"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_vis_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vis_scroll"
        android:background="@color/colorPrimary"
        android:text="@string/salvar"
        android:textColor="@color/colorBranco"
        android:textSize="@dimen/fontebotoes"
        android:visibility="invisible" />


</RelativeLayout>
