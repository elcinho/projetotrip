<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="libelulati.tripctrl.Viagens.ViagensNovoActivity"
    tools:showIn="@layout/activity_viagens__novo">

    <ScrollView
        android:id="@+id/sv_vin_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ed_vin_nome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="@string/nome"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/ed_vin_localizacao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ed_vin_nome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vin_nome"
                android:layout_below="@+id/ed_vin_nome"
                android:hint="@string/localizacao"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/ed_vin_inicio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ed_vin_localizacao"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vin_localizacao"
                android:layout_below="@+id/ed_vin_localizacao"
                android:hint="@string/dtinicio"
                android:inputType="date"
                android:textColor="@color/colorAccent"
                android:onClick="showDatePickerDialog_vin_dtini"/>

            <EditText
                android:id="@+id/ed_vin_fim"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ed_vin_inicio"
                android:hint="@string/dtfim"
                android:inputType="date"
                android:textColor="@color/colorAccent"
                android:onClick="showDatePickerDialog_vin_dtfim"/>

            <EditText
                android:id="@+id/ed_vin_tipotransporte"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ed_vin_fim"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vin_fim"
                android:layout_below="@+id/ed_vin_fim"
                android:hint="@string/tipotransporte"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/ed_vin_transporte"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ed_vin_tipotransporte"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vin_tipotransporte"
                android:layout_below="@+id/ed_vin_tipotransporte"
                android:hint="@string/transporte"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/ed_vin_tipohospedagem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ed_vin_transporte"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vin_transporte"
                android:layout_below="@+id/ed_vin_transporte"
                android:hint="@string/tipohospedagem"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/ed_vin_hospedagem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ed_vin_tipohospedagem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vin_tipohospedagem"
                android:layout_below="@+id/ed_vin_tipohospedagem"
                android:hint="@string/hospedagem"
                android:inputType="textAutoComplete|textCapWords"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/ed_vin_valortotal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ed_vin_hospedagem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ed_vin_hospedagem"
                android:layout_below="@+id/ed_vin_hospedagem"
                android:hint="@string/valortotal"
                android:inputType="numberDecimal"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
